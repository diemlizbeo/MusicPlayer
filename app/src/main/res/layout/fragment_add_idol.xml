<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#A7D3E6"
    android:layout_height="match_parent">

    <TextView
        android:text="Add my idol"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvt"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/avt"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <EditText
                android:id="@+id/edname"
                android:ems="10"
                android:drawablePadding="7dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_name_tag"
                android:background="@drawable/custom_input"
                android:hint="Enter name"
                android:textSize="16dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

            <EditText
                android:id="@+id/eddob"
                android:ems="10"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/ic_calendar"
                android:background="@drawable/custom_input"
                android:hint="Dobirth"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
            <EditText
                android:id="@+id/edcountry"
                android:ems="10"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/ic_country"
                android:background="@drawable/custom_input"
                android:hint="Enter country"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
            <EditText
                android:id="@+id/edimg"
                android:ems="10"
                android:background="@drawable/custom_input"
                android:hint="Choose image"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/baseline_image"
                android:textSize="16dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
            <TextView
                android:text="Why do you like this idol ?"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="-95dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edlike"
                android:ems="10"
                android:background="@drawable/custom_input"
                android:hint="  I like ..."
                android:textSize="16dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

           <Button
               android:layout_marginTop="20dp"
               android:text="ADD"
               android:background="@drawable/button1"
               android:layout_width="360dp"
               android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>